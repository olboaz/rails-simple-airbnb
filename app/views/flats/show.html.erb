<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <ul class="navbar-nav mr-auto navbar-light bg-light">
    <li class="navbar-brand"><%= link_to "Simple Airbnb", flats_path%></li>
  </ul>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    <li class="nav-link"><%= link_to "Add flat", new_flat_path, class: "btn btn-primary"%></li>
  </form>
</nav>

<div class="map" style="background-image: url(<%= @flat.image_url %>)">

</div>

<div class="container flat-show-card">
  <h2><%= @flat.name %></h2>
  <p><%= @flat.address %></p>
</div>

<div class="container flat-show-card">
<p><%= @flat.description %></p>
</div>

<div class="container flat-show-card">
  <i class="material-icons mr-2">people</i>
  <span class="mr-3"><%= @flat.number_of_guests %></span>
  <i class="material-icons mr-2">euro_symbol</i>
  <span><%= @flat.price_per_night %></span>
</div>
