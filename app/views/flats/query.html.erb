<div class="container">
  <h1>All our Flats</h1>
  <p>All <%= @flats.count %> flats.</p>
  <div class="row">
      <% @flats.each do |flat|  %>
        <div class="col">
          <div class="flat-card">
            <%= image_tag flat.image_url , class: "img-fluid"%>
            <div class="flat-card-content">
              <p><%= flat.name %></p>
              <p><%= flat.address %></p>
              <div class="d-flex justify-content-start">
                <div class="d-flex align-items-center">
                  <i class="material-icons mr-2">people</i>
                  <span class="mr-3"><%= flat.number_of_guests %></span>
                </div>
                <div class="d-flex align-items-center">
                  <i class="material-icons mr-2">euro_symbol</i>
                  <span><%= flat.price_per_night %></span>
                </div>
              </div>
            </div>

            <div class="flat-card-actions">
              <ul class= "list-inline">
                <li class="list-inline-item"><%= link_to "More info", flat_path(flat), class: "text-primary"%></li>
                <li class="list-inline-item"><%= link_to "Edit", edit_flat_path(flat), class: "text-warning"%></li>
                <li class="list-inline-item"><%= link_to "Remove", flat_path(flat), method: :delete,
                  data: { confirm: "Are you sure?" }, class: "text-danger"%></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
