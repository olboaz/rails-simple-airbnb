<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <ul class="navbar-nav mr-auto navbar-light bg-light">
    <li class="navbar-brand"><%= link_to "Simple Airbnb", flats_path%></li>
  </ul>
  <form class="form-inline my-2 my-lg-0">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    <li class="nav-link"><%= link_to "Add flat", new_flat_path, class: "btn btn-primary"%></li>
  </form>
</nav>

<div class="container flat-form">
<h1>Edit Flat</h1>
<%= simple_form_for(@flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :image_url %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.submit class: "btn btn-primary"%>
<% end %>
</div>
